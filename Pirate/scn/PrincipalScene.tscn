script/source = "extends Node2D

onready var Map : TileMap = $Map
onready var CameraWorld : Viewport = $Viewport
onready var Selector : Sprite = $Selector
onready var DebugMode : Panel = $Debug
onready var SelectorLabel = $Selector/SelectorLabel

var PlayerTiles
var PlayerPosTile
var PlayerPosReal

var MapSize : Array
var ChestPos
var IslandTiles : Array

var MousePosReal
var MousePosTile

var SelectorIsActived : bool
var SelectorOnPlayer : bool
var SelectorOnChest : bool
var SelectorOnIsland : bool

var DistanceMax : int 

func _ready():
	Map.set_cell(7,7,1)
	PlayerTiles()
	SelectorIsActived = false
	Selector.visible = false
	
	MapSize = Map.get_used_cells()
	RandiTiles()
	
func _process(delta):
	var DebugMousePos
	var IslandCellPos
	
	Debug()
	SelectorMovement()
	
	if SelectorIsActived: #si le curseur est apparu sur l'écran
		if SelectorOnPlayer: 
			Player.movement(PlayerPosTile,MousePosTile,DistanceMax,SelectorLabel)
		if SelectorOnChest:
			if MousePosTile != ChestPos:
				SelectorIsActived = false
				Selector.visible = false
				SelectorOnChest = false
		if SelectorOnIsland:
			if not IslandTiles.has(MousePosTile):
				SelectorOnIsland = false
				SelectorIsActived = false
				Selector.visible = false
	else: #si le curseur n'est pas sur l'écran
		Selector.visible = false
		if Input.is_action_just_pressed(\"MouseLeft\") and MousePosTile == PlayerPosTile: #si souris sur Navire
			SelectorOnPlayer = true
			SelectorIsActived = true
			Selector.visible = true
		elif MousePosTile == ChestPos: #si souris sur Coffre
			SelectorIsActived = true
			Selector.visible = true
			SelectorOnChest = true
		elif IslandTiles.has(MousePosTile):
			SelectorOnIsland = true
			SelectorIsActived = true
			Selector.visible = true
	
func SelectorMovement(): #gère tout ce qui concerne le curseur
	var Offset = Vector2(32,32)
	var PreHunger : int
	
	MousePosReal = get_global_mouse_position()
	MousePosTile = Map.world_to_map(MousePosReal)
	
	Selector.position = lerp(Selector.position,Map.map_to_world(MousePosTile) + Offset, 0.2)
	
	#Change le texte du label
	if SelectorIsActived and SelectorOnPlayer: #si Navire
		PreHunger = Player.movement(PlayerPosTile,MousePosTile,DistanceMax,SelectorLabel)
	if SelectorIsActived and SelectorOnChest: #si Coffre
		SelectorLabel.text = \"Chest\"
	if SelectorIsActived and SelectorOnIsland:
		SelectorLabel.text = \"Island\"
		
	# Si le joueur appuye sur le navire
	if Input.is_action_just_pressed(\"MouseRight\") and SelectorIsActived and SelectorOnPlayer:
		SelectorIsActived = false
		yield(get_tree().create_timer(0,1),\"timeout\")
	if Input.is_action_just_pressed(\"MouseLeft\") and SelectorIsActived and SelectorOnPlayer:
		if Player.Hunger > PreHunger or Player.Hunger == PreHunger:
			if PlayerPosTile != MousePosTile:
				MovePlayer(PreHunger)

func PlayerTiles():
	PlayerTiles = Map.get_used_cells_by_id(1) #array
	for player in PlayerTiles:
		PlayerPosTile = player
	
func MovePlayer(preHunger):
	if SelectorIsActived:
		Player.Hunger -= preHunger
		Map.set_cellv(MousePosTile,1)
		SelectorIsActived = false
		yield(get_tree().create_timer(0,1),\"timeout\")
		Map.set_cellv(PlayerPosTile,0)
		PlayerTiles()

func RandiTiles():
	var CellsRandi : Array
	
	for cell in MapSize:
		var DistanceToPlayer
		DistanceToPlayer = cell.distance_to(PlayerPosTile) as int
		if DistanceToPlayer > 5 :
			CellsRandi.append(cell)
	
	while  ChestPos == null:
		var randiArray 
		var randiPos =  CellsRandi.size()
		randiArray = randi() % randiPos
		ChestPos = CellsRandi[randiArray]
		Map.set_cellv(ChestPos,3)

	print (ChestPos)

	while  IslandTiles.size() < 4:
			var SetCellPos
			var randiArray 
			var randiPos =  CellsRandi.size()
			randiArray = randi() % randiPos + 1
			SetCellPos = CellsRandi[randiArray]
			if !SetCellPos == ChestPos:
				Map.set_cellv(SetCellPos,4)
				IslandTiles.append(SetCellPos)
	
func Debug():
	var MousePosRealDebug := $Debug/MousePosReal
	var MousePosTileDebug := $Debug/MousePosTile
	var LifeDebug := $Debug/Life
	var HungerDebug := $Debug/Hunger
	var MoneyDebug := $Debug/Money
	
	MousePosRealDebug.text = \"MousePos : \" + str(MousePosReal)
	MousePosTileDebug.text = \"MousePos : \" + str(MousePosTile)
	LifeDebug.text = \"Life : \" + str(Player.Life)
	HungerDebug.text = \"Hunger : \" + str(Player.Hunger)
	MoneyDebug.text = \"Money : \" + str(Player.Money)
	
"

